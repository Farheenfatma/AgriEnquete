<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile"
    android:background="#fff"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/profiletool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">
        <ImageButton
            android:onClick="open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_mode_edit_white_24dp"
            android:background="@android:color/transparent"
            android:layout_marginEnd="15dp"
            android:layout_gravity="right"
            />

    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/capture" />

    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:gravity="top|center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:textColorHint="#000"
                android:textAlignment="center"
                android:id="@+id/namehint"
                android:hint="Name"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textColorHint="#000"
                    android:focusableInTouchMode="false"
                    android:focusable="false"
                    android:editable="false"
                    android:focusedByDefault="false"
                    android:textColor="#000"
                    android:id="@+id/namevalue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:textColorHint="#000"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:id="@+id/phonehint"
                android:hint="Phone no."
                android:layout_height="wrap_content">
                <EditText
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textColorHint="#000"
                    android:id="@+id/phonevalue"
                    android:focusableInTouchMode="false"
                    android:focusable="false"
                    android:editable="false"
                    android:focusedByDefault="false"
                    android:textColor="#000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:textColorHint="#000"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:id="@+id/emailhint"
            android:hint="Email ID"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textColorHint="#000"

                    android:focusableInTouchMode="false"
                    android:focusable="false"
                    android:editable="false"
                    android:focusedByDefault="false"
                    android:textColor="#000"
                    android:id="@+id/emailvalue"                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:textColorHint="#000"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:hint="Date of Birth"
                android:id="@+id/dobhint"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textColorHint="#000"

                    android:focusableInTouchMode="false"
                    android:focusable="false"
                    android:editable="false"
                    android:focusedByDefault="false"
                    android:textColor="#000"
                    android:id="@+id/dobvalue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:textColorHint="#000"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:hint="locality"
                android:id="@+id/localitynhint"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textColorHint="#000"
                    android:focusableInTouchMode="false"
                    android:focusable="false"
                    android:editable="false"
                    android:focusedByDefault="false"
                    android:textColor="#000"
                    android:id="@+id/localityvalue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:textColorHint="#000"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:hint="State"
                android:id="@+id/statehint"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textColorHint="#000"

                    android:focusableInTouchMode="false"
                    android:focusable="false"
                    android:editable="false"
                    android:focusedByDefault="false"
                    android:textColor="#000"
                    android:id="@+id/statevalue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:textColorHint="#000"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:hint="Location"
                android:id="@+id/locationhint"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textColorHint="#000"

                    android:focusableInTouchMode="false"
                    android:focusable="false"
                    android:editable="false"
                    android:focusedByDefault="false"
                    android:textColor="#000"
                    android:id="@+id/locationvalue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>
            <TextView
                android:layout_marginBottom="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>


        </LinearLayout>



    </ScrollView>


</LinearLayout>