<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/lim"
        android:layout_alignParentStart="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#7CBCF0">
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:layout_weight="3">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/limpid"
                android:background="#fff"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:orientation="vertical"
            android:layout_weight="7">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <android.support.v7.widget.CardView
                            android:id="@+id/edu"
                            android:layout_width="200dp"
                            android:layout_height="150dp"
                            android:padding="30dp"
                            android:layout_weight="5"
                            android:background="#fff"
                            app:cardElevation="10dp"
                            app:cardCornerRadius="10dp"
                            android:layout_margin="10dp">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_marginTop="10dp"
                                    android:layout_width="190dp"
                                    android:layout_height="120dp"
                                    android:src="@drawable/edu" />
                                <TextView
                                    android:textSize="18sp"
                                    android:layout_gravity="center"
                                    android:textStyle="bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Eduction"/>
                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:id="@+id/its"
                            android:layout_width="200dp"
                            android:layout_height="150dp"
                            android:background="#fff"
                            android:layout_weight="5"
                            app:cardElevation="10dp"
                            app:cardCornerRadius="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginRight="10dp">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_marginTop="10dp"
                                    android:layout_width="200dp"
                                    android:layout_height="120dp"
                                    android:src="@drawable/it"
                                    />
                                <TextView
                                    android:textSize="18sp"
                                    android:layout_gravity="center"
                                    android:textStyle="bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="IT Sector "/>
                            </LinearLayout>
                        </android.support.v7.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <android.support.v7.widget.CardView
                            android:layout_width="200dp"
                            android:layout_height="150dp"
                            android:padding="30dp"
                            android:layout_weight="5"
                            android:background="#fff"
                            app:cardElevation="10dp"
                            app:cardCornerRadius="10dp"
                            android:layout_margin="10dp">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_marginTop="10dp"
                                    android:layout_width="190dp"
                                    android:layout_height="120dp"
                                    android:src="@drawable/media"
                                    />
                                <TextView
                                    android:textSize="18sp"
                                    android:layout_gravity="center"
                                    android:textStyle="bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Media"/>
                            </LinearLayout>
                        </android.support.v7.widget.CardView>
                        <android.support.v7.widget.CardView
                            android:layout_width="200dp"
                            android:layout_height="150dp"
                            android:padding="30dp"
                            android:layout_weight="5"
                            android:background="#fff"
                            app:cardElevation="10dp"
                            app:cardCornerRadius="10dp"
                            android:layout_margin="10dp">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_marginTop="10dp"
                                    android:layout_width="190dp"
                                    android:layout_height="120dp"
                                    android:src="@drawable/imexp"
                                    />
                                <TextView
                                    android:textSize="18sp"
                                    android:layout_gravity="center"
                                    android:textStyle="bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Export Import "/>
                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <android.support.v7.widget.CardView
                            android:layout_width="200dp"
                            android:layout_height="150dp"
                            android:padding="30dp"
                            android:layout_weight="5"
                            android:background="#fff"
                            app:cardElevation="10dp"
                            app:cardCornerRadius="10dp"
                            android:layout_margin="10dp">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_marginTop="10dp"
                                    android:layout_width="190dp"
                                    android:layout_height="120dp"
                                    android:src="@drawable/art"
                                    />
                                <TextView
                                    android:textSize="18sp"
                                    android:layout_gravity="center"
                                    android:textStyle="bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Art "/>
                            </LinearLayout>
                        </android.support.v7.widget.CardView>
                        <android.support.v7.widget.CardView
                            android:layout_width="200dp"
                            android:layout_height="150dp"
                            android:padding="30dp"
                            android:layout_weight="5"
                            android:background="#fff"
                            app:cardElevation="10dp"
                            app:cardCornerRadius="10dp"
                            android:layout_margin="10dp">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_marginTop="10dp"
                                    android:layout_width="190dp"
                                    android:layout_height="120dp"
                                    android:src="@drawable/health"
                                    />
                                <TextView
                                    android:textSize="18sp"
                                    android:layout_gravity="center"
                                    android:textStyle="bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Health Sector "/>
                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">\
                        <android.support.v7.widget.CardView
                            android:layout_width="200dp"
                            android:layout_height="150dp"
                            android:padding="30dp"
                            android:layout_weight="5"
                            android:background="#fff"
                            app:cardElevation="10dp"
                            app:cardCornerRadius="10dp"
                            android:layout_margin="10dp">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_marginTop="10dp"
                                    android:layout_width="190dp"
                                    android:layout_height="120dp"
                                    android:src="@drawable/digi"
                                    />
                                <TextView
                                    android:textSize="18sp"
                                    android:layout_gravity="center"
                                    android:textStyle="bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Digital Marketing "/>
                            </LinearLayout>
                        </android.support.v7.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>